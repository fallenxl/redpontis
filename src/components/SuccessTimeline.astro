---
type Item = { year: string; text: string };
const items: Item[] = [
  { year: "2015", text: "Uso del eCore Switch para la plataforma Visa Pagos (Niubiz), ~3M transacciones diarias." },
  { year: "2017", text: "Payment Gateway 2.0 para Niubiz: Pago App y Pago Web." },
  { year: "2018", text: "Pagos en tiempo real (Visa Direct), hoy +3M transacciones diarias de Yape y Plin." },
  { year: "2019", text: "Nuevo canal de pago presencial (POS) para Culqi vía nuestro Gateway en marca blanca." },
  { year: "2020", text: "Oncosalud: +10% conversión con nueva plataforma de cobros recurrentes." },
  { year: "2021", text: "BackOffice para Marketplace de Diners Club." },
  { year: "2021", text: "Nueva plataforma de tokenización para Oncosalud." },
  { year: "2023", text: "App de terminales para BBVA; contribuye a su rol de primer banco adquirente en Perú." },
  { year: "2023", text: "Tap To Phone (marca blanca) para aceptación contactless en móviles." },
  { year: "2023", text: "Culqi: +3 billones de soles transaccionados por nuestra plataforma." },
  { year: "2024", text: "Pulseras NFC (sistema cerrado) para UENO BANK en Paraguay." },
];
---

<section id="success" class="relative bg-[#575756]/5">
  <div class="mx-auto max-w-7xl px-4 md:px-6 py-16 md:py-24">
    <header class="max-w-3xl">
      <h2 class="text-3xl md:text-4xl font-black tracking-tight">Casos de éxito</h2>
      <p class="mt-3 text-[#575756]">
        Cada desafío es una oportunidad para innovar. Así hemos transformado operaciones y generado valor real.
      </p>
    </header>

    <ol class="mt-10 space-y-5">
      {items.map((it, i) => (
        <li class="su-item relative rounded-2xl border border-[#575756]/20 bg-white p-5">
          <div class="flex items-start gap-4">
            <span class="mt-1 inline-flex h-8 w-8 shrink-0 items-center justify-center rounded-full bg-[#B41A1D]/10 font-bold text-[#B41A1D]">
              {it.year.slice(2)}
            </span>
            <p class="text-[#121212]">{it.text}</p>
          </div>
        </li>
      ))}
    </ol>
  </div>
</section>

<script>
  import gsap from "gsap";
  import ScrollTrigger from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);
  gsap.from(".su-item", {
    opacity: 0, y: 14, duration: 0.45, stagger: 0.04,
    scrollTrigger: { trigger: "#success", start: "top 78%" },
  });
</script>
